{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "oldPrice": {
      "type": "decimal"
    },
    "imageAlt": {
      "type": "string"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "material": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::material.material"
    },
    "occasions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::occasion.occasion"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "customizable": {
      "type": "boolean",
      "default": false
    },
    "sizes": {
      "type": "json"
    },
    "inStock": {
      "type": "boolean",
      "default": true
    },
    "rating": {
      "type": "decimal"
    },
    "reviewCount": {
      "type": "integer"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "isFeaturedProduct": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "recipient_lists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::recipient-list.recipient-list",
      "mappedBy": "products"
    },
    "product_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    },
    "bulkEligible": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "bulkPricingRules": {
      "type": "json"
    }
  }
}
